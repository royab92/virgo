<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.myapplication.MapsActivity"
    android:background="@color/colorPrimary"
    android:id="@+id/mlayout"
    >
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        app:layout_heightPercent="7%"
        android:layout_alignParentTop="true"
        android:text=""
        android:background="#651671"/>

    <ImageView
        android:id="@+id/imageViewcoin"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="0.3%"
        android:src="@drawable/bitcoin" />

    <TextView
        android:id="@+id/textgold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        />

    <ImageView
        android:id="@+id/imageViewstar"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/star"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="0.5%"
        />

    <TextView
        android:id="@+id/textstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        app:layout_marginTopPercent="1%"
        app:layout_marginRightPercent="4%"
        android:layout_alignParentEnd="true"
        android:text="" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="21%"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/location"
        android:elevation="15dp"
        android:onClick="Clickzoom"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="10%"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/manprofile"
        android:tint="@color/White"
        android:elevation="15dp"
        android:onClick="Clickhome"/>














</android.support.percent.PercentRelativeLayout>