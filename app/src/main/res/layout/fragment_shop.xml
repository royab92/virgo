<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.myapplication.Shop"
    android:background="@drawable/backg"
    >

    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        app:layout_heightPercent="7%"
        android:layout_alignParentTop="true"
        android:text=""
        android:background="#651671"/>

    <ImageView
        android:id="@+id/imageView5"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="0.3%"
        app:srcCompat="@drawable/bitcoin" />

    <TextView
        android:id="@+id/textgold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        />

    <ImageView
        android:id="@+id/imageView6"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/star"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="0.5%"
        />

    <TextView
        android:id="@+id/textstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        app:layout_marginTopPercent="1%"
        app:layout_marginRightPercent="4%"
        android:layout_alignParentEnd="true"
        android:text="" />

    <TextView
        android:id="@+id/part1"
        app:layout_widthPercent="95%"
        app:layout_heightPercent="25%"
        android:layout_below="@+id/topbar"
        app:layout_marginTopPercent="1%"
        android:layout_centerHorizontal="true"
        android:text=""
        android:background="@drawable/parts"/>
    <TextView
        android:id="@+id/part2"
        app:layout_widthPercent="95%"
        app:layout_heightPercent="25%"
        android:layout_below="@+id/part1"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text=""
        android:background="@drawable/parts"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="6pt"
        android:layout_below="@+id/topbar"
        app:layout_marginTopPercent="3%"
        app:layout_marginRightPercent="9%"
        android:layout_alignParentEnd="true"
        android:text="خرید سکه"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="6pt"
        android:layout_below="@+id/part1"
        app:layout_marginTopPercent="4%"
        app:layout_marginRightPercent="9%"
        android:layout_alignParentEnd="true"
        android:text="خرید فیچرز"
        />

    <HorizontalScrollView
        app:layout_widthPercent="95%"
        app:layout_heightPercent="20%"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        >
        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/coins">
        </android.support.percent.PercentRelativeLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        app:layout_widthPercent="95%"
        app:layout_heightPercent="20%"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        >
        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/featurs">
        </android.support.percent.PercentRelativeLayout>
    </HorizontalScrollView>



</android.support.percent.PercentRelativeLayout>

