<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.myapplication.Question"
    android:background="@drawable/backg">
    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        app:layout_heightPercent="7%"
        android:layout_alignParentTop="true"
        android:text=""
        android:background="#651671"/>

    <ImageView
        android:id="@+id/imageView5"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="0.3%"
        app:srcCompat="@drawable/bitcoin" />

    <TextView
        android:id="@+id/textgold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        />

    <ImageView
        android:id="@+id/imageView6"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/star"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="0.5%"
        />

    <TextView
        android:id="@+id/textstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        app:layout_marginTopPercent="1%"
        app:layout_marginRightPercent="4%"
        android:layout_alignParentEnd="true"
        android:text="" />

    <TextView
        android:id="@+id/question"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="28%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="17%"
        android:text=""
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:padding="10dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/answer1"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:layout_below="@+id/progressBar5"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%"
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/answer2"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/progressBar5"
        android:text=""
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="53%"
        app:layout_marginTopPercent="1%"/>

    <Button
        android:id="@+id/answer3"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="3%"
        android:text=""
        android:layout_below="@+id/answer1"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%"
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/answer4"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/answer1"
        android:text=""
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="53%"
        app:layout_marginTopPercent="3%"/>


    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="2%"
        android:visibility="invisible"
        android:indeterminateTint="@color/lpurple"
        />

    <TextView
        android:id="@+id/result"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="8%"
        android:layout_below="@+id/answer4"
        app:layout_marginTopPercent="6%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qr"
        android:textColor="@color/dpurple"
        android:textSize="9pt"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text=""
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView4"
        app:layout_widthPercent="18%"
        app:layout_heightPercent="15%"
        android:layout_below="@+id/answer4"
        app:layout_marginStartPercent="13%"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/trueanswer"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/next"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="8%"
       android:layout_below="@+id/result"
       android:layout_alignParentEnd="true"
        app:layout_marginTopPercent="2%"
        android:text="پرسش بعدی"
        android:background="@drawable/qr"
        android:textColor="@color/dpurple"
        android:textSize="9pt"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        app:layout_marginEndPercent="10%"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="Clicknext"/>

    <TextView
        android:id="@+id/home"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="8%"
        android:layout_below="@+id/result"
       android:layout_alignParentStart="true"
        app:layout_marginTopPercent="2%"
        android:text="صفحه اصلی"
        android:background="@drawable/qr"
        android:textColor="@color/dpurple"
        android:textSize="9pt"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        app:layout_marginStartPercent="10%"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="Clickmain"/>

    <TextView
        android:id="@+id/textView17"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="6%"
        android:layout_below="@+id/topbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qr"
        app:layout_marginTopPercent="2%"
        android:textColor="@color/dpurple"
        android:textSize="7pt"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="تعداد پرسش باقی مانده برای امروز" />

    <TextView
        android:id="@+id/qnumber"
        app:layout_widthPercent="10%"
        app:layout_heightPercent="6%"
        android:layout_below="@+id/topbar"
      android:layout_alignParentStart="true"
        app:layout_marginStartPercent="10%"
        app:layout_marginTopPercent="2%"
        android:textColor="@color/dpurple"
        android:textSize="7pt"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:text=" " />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="4%"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="2%"
        android:indeterminate="false"
        android:progressDrawable="@drawable/horizentalpr"
        android:layout_below="@+id/question"

        />
    <TextView
        android:id="@+id/textprogress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="2.5%"
        android:layout_below="@+id/question"
        android:text=""
        android:textAlignment="center"
        android:textSize="6pt"
        android:textStyle="bold"
        android:textColor="@color/White"
        />

</android.support.percent.PercentRelativeLayout>
