<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rb.vorujak.Question2Fragment"
    android:background="@drawable/backg">
    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        app:layout_heightPercent="7%"
        android:layout_alignParentTop="true"
        android:text=""
        android:background="#651671"/>

    <ImageView
        android:id="@+id/imageView5"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="0.3%"
        app:srcCompat="@drawable/bitcoin" />

    <TextView
        android:id="@+id/textgold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        />

    <ImageView
        android:id="@+id/imageView6"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="6%"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/star"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="0.5%"
        />

    <TextView
        android:id="@+id/textstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="1%"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="8pt"
        app:layout_marginTopPercent="1%"
        app:layout_marginRightPercent="4%"
        android:layout_alignParentEnd="true"
        android:text="" />

    <TextView
        android:id="@+id/question"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="28%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="15%"
        android:text=""
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/answer1"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text=""
        android:layout_below="@+id/question"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%"
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/answer2"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/question"
        android:text=""
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="53%"
        app:layout_marginTopPercent="5%"/>

    <Button
        android:id="@+id/answer3"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="3%"
        android:text=""
        android:layout_below="@+id/answer1"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%"
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/answer4"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/answer1"
        android:text=""
        android:textColor="@color/dpurple"
        android:background="@drawable/qr"
        android:textSize="8pt"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="53%"
        app:layout_marginTopPercent="3%"/>

    <TextView
        android:id="@+id/texttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="14%"
        android:text=""
        android:textSize="10pt"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="4%"
        android:visibility="invisible"
        android:indeterminateTint="@color/lpurple"
        />

    <ImageView
        android:id="@+id/treasure"
        app:layout_widthPercent="18%"
        app:layout_heightPercent="12%"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%"
        app:srcCompat="@drawable/treasure"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView11"
        app:layout_widthPercent="6%"
        app:layout_heightPercent="4%"
        android:layout_below="@+id/topbar"
        app:layout_marginTopPercent="2%"
       android:layout_alignParentEnd="true"
        app:layout_marginRightPercent="20%"
        app:srcCompat="@drawable/plus"
        android:onClick="Clickplus"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        app:layout_marginTopPercent="2.5%"
        android:layout_toLeftOf="@+id/imageView11"
        app:layout_marginRightPercent="1%"
        android:textSize="7pt"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:text="افزودن به صندوق سوالات" />


</android.support.percent.PercentRelativeLayout>
