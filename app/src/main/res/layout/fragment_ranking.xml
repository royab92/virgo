<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg">
    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        app:layout_heightPercent="6%"
        android:layout_alignParentTop="true"
        android:text="رتبه بندی"
        android:textColor="@color/White"
        android:gravity="right|center_vertical"
        android:textStyle="bold"
        android:textSize="8pt"
        android:paddingRight="10dp"
        android:background="#651671"/>

    <Button
        android:id="@+id/dana"
        app:layout_widthPercent="95%"
        app:layout_heightPercent="13%"
        android:background="@drawable/rankb"
        android:layout_below="@+id/topbar"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        android:text="داناترین ها"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="10pt"
        android:textStyle="bold"
        android:onClick="Clickdana"/>
    <Button
        android:id="@+id/tajrobe"
        app:layout_widthPercent="95%"
        app:layout_heightPercent="13%"
        android:background="@drawable/rankb"
        android:layout_below="@+id/dana"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%"
        android:text="با تجربه ترین ها"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="10pt"
        android:textStyle="bold"
        android:onClick="Clicktajrobe"/>
    <Button
        android:id="@+id/dara"
        app:layout_widthPercent="95%"
        app:layout_heightPercent="13%"
        android:background="@drawable/rankb"
        android:layout_below="@+id/tajrobe"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%"
        android:text="داراترین ها"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="10pt"
        android:textStyle="bold"
        android:onClick="Clickdara"/>
</android.support.percent.PercentRelativeLayout>